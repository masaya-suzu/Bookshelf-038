<div class="card">
  <%= link_to image_tag(book.image, class: :card__img ), root_path(book.id)%>
  <div class="card__body">
    <%= link_to book.book_title, root_path(book.id), class: :card__title%>
    <p class="card__summary">
      <%= book.book_number %>
    </p>
    <ul class="more_list">
      <li>
        <%= link_to '詳細', root_path(book.id), method: :get %>
      </li>
    </ul>
    <%= link_to book.user.name, user_path(book.user.id), class: :card__user %>
  </div>
</div>